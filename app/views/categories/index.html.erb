<h2>CheckMark</h2>

<hr>
  <%= link_to 'New Category', new_category_path %>

<% @categories.each do |category| %>
  <hr>
  <table>
    <tr>
      <th colspan=3 align='left'><h3><%= category.title %></h3>
                                  <h4><%= category.description%></h4></th>
      <th colspan=2 align='right'><%= link_to 'Edit Category', edit_category_path(category) %><br>
                                  <%= link_to 'Delete Category', category_path(category), method: :delete %></th>
    </tr>
    <tr>
      <td><%= link_to 'New Item', new_category_item_path(category) %></td>
    </tr>
    <tr>
      <td><strong>Item</strong></td>
      <td><strong>Category</strong></td>
      <td><strong>View Item</strong></td>
      <td><strong>Complete</strong></td>
      <td><strong>Delete</strong></td>
    </tr>
    <% category.items.each do |item| %>
      <tr>
        <% # TODO: Make entire cell for the content clickable (to edit item) %>
        <td><%= item.content %></td>
        <td><%= category.title %></td>
        <td><%= link_to 'View', [item.category, item] %></td>
        <td><%= link_to 'Complete', [item.category, item], method: :delete,
                data: { confirm: 'Complete item?' } %></td>
        <td><%= link_to 'Delete', [item.category, item], method: :delete,
                data: { confirm: 'Delete item?' } %></td>
      </tr>
    <% end %>
  </table>
<% end %>